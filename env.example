# Puerto de la aplicación
PORT=3006

# Base de datos PostgreSQL
# Desarrollo local: usar SQLite → DATABASE_URL="file:./dev.db"
# Producción: usar PostgreSQL ↓
DATABASE_URL="postgresql://postgres:PASSWORD@host:5432/postgres"

# Next Auth (OAuth)
NEXTAUTH_URL="http://localhost:3006"
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET="tu-secret-generado-con-openssl-rand-base64-32-caracteres-minimo"

# Google OAuth (para autenticación de usuarios)
# Crear en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="tu-google-client-id"
GOOGLE_CLIENT_SECRET="tu-google-client-secret"

# Notion OAuth App
# Crear en: https://www.notion.so/my-integrations
# ⚠️ Tipo: PUBLIC (no Internal)
NOTION_CLIENT_ID="tu-notion-oauth-client-id"
NOTION_CLIENT_SECRET="tu-notion-oauth-client-secret"
NOTION_REDIRECT_URI="http://localhost:3006/api/notion/callback"

# ⚠️ Solo para desarrollo: Token de integración interna
# NO usar en producción, usar OAuth arriba
# NOTION_TOKEN="ntn_xxxxxxxxxxxxxxxxxxxxx"

# Opcional: Almacenamiento estático (R2/S3)
# R2_ACCOUNT_ID=""
# R2_ACCESS_KEY_ID=""
# R2_SECRET_ACCESS_KEY=""
# R2_BUCKET_NAME=""
# R2_PUBLIC_URL=""

# Feature flags
ENABLE_STATIC_SNAPSHOTS="false"
ENABLE_DEBUG_LOGS="true"

# Rate limiting
NOTION_MAX_REQUESTS_PER_SECOND="3"

# Cron secret (para proteger endpoint /api/sync en producción)
# CRON_SECRET="tu-secret-aleatorio-para-cron"

